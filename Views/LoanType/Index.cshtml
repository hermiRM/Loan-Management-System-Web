@model IEnumerable<LoanManagementSystem.Models.LoanType>

@{
    ViewData["Title"] = "Loan Type";
    ViewBag.LoanTypeActive = "active";
}

<h1>Loan Type</h1>

<p>
    <a asp-action="Create">Add New Type</a>
</p>
<table class="table table-responsive table-striped table-hover w-100 border-0">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="w-20">
                    @Html.DisplayFor(modelItem => item.LoanTypeName)
                </td>
                <td class="w-50">
                    @Html.DisplayFor(modelItem => item.LoanDescription)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-circle-trash"></i>Delete</a>
                </td>
            </tr>
        }
        @{
            if (Model.Count() == 0)
            {
            <tr>
                <td class="w-50" colspan="2">Empty Database</td>
                <td class="w-50"></td>
            
            </tr>
        }

        }
        </tbody>
    </table>
